<div class="user-profile">
	<div class="container">

	<div class=" col-md-12">
		<p id="notice"><%= notice %></p>

		<div class="left-box col-md-6">
		<div class="meetme col-md-12">
			<h3> You sent <%= current_user.meetings.count%> meetme@ to your friends</h3>
			
			<% current_user.meetings[0..2].each do |m|%>
				<div class="meet-at">
				<h4 ><%= m.name %> 
				with <%=m.receiver.firstname.upcase%>
				
				</h4>
				

			
				<%= link_to "See detail", meeting_path(m), class: "btn btn-md btn-default no-border"%>
				<%#= link_to "Edit", edit_meeting_path(meeting, meeting.receiver_id), class: "btn btn-md btn-default back" %>
				<%#= link_to "Remove", meeting, :method => :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-default back" %>
				</div>
			<%end%>

		</div> <!-- close meetme -->
		<div class="meetme col-md-12">
			<h3> You have <%=current_user.inverse_meetings.count%> from your friends</h3>
			<% current_user.inverse_meetings[0..2].each do |inverse| %>

				<div class="meet-at">
				<h4><%= inverse.name%> with <%=inverse.user.firstname.upcase %></h4>
				<%= link_to "See detail", meeting_path(inverse), class: "btn btn-md btn-default no-border" %>
				</div>
			<% end %>
		</div><br>

		<div class="col-md-12">
				
			<%=link_to "Add meetme@", new_meeting_path, class: "btn btn-md btn-default border" %>
		</div>
		

		<div class="contactlist col-md-12" >

		<%= link_to "All Contacts", friendships_path(current_user), class: "btn btn-md btn-default border" %><br>
		<%= link_to "Add New Contact", users_path, class: "btn btn-md btn-default border"%><br>
		</div>	<!-- close contact list -->

			
		
	</div>
	<div id="map-canvas" class="col-md-6"></div>
	
	
		</div> <!-- close col-md-12
 -->
	</div> <!-- close container-->

</div> <!-- close user-profile -->
	




