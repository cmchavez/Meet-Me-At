<div class="container registration" id="wrap">


    <div id="logo-signup"></div>

    <div class="signupnow">
      <div class="row">
          <div class= "col-md-6 col-md-offset-3">
              <h2>Sign Up Now</h2>

    <%= form_for(resource, :class=>"form", as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

    <div class="row">
      <div class="field col-xs-6 col-md-6">
      <%= f.text_field :firstname, autofocus: true, :class=>"form-control input-lg", :placeholder=>"First Name"%>
    </div>

     <div class="field col-xs-6 col-md-6">
      
      <%= f.text_field :lastname, autofocus: true, :class=>"form-control input-lg", :placeholder=>"Last Name" %>
    </div>
  </div>
  <div class="row">
    <div class="field col-xs-6 col-md-6">
      <%= f.email_field :email, autofocus: true, :class=>"form-control input-lg", :placeholder=>"Email"%>
    </div>
    <div class="field col-xs-6 col-md-6">
      <%= f.file_field :image, :class=>"btn btn-file btn-lg" %>
    </div>
  </div>

  <div class="row">
  <div class="field col-xs-6 col-md-6">
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"password, 8 characters min" %>
  </div>

  <div class="field col-xs-6 col-md-6">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"confirm password" %>
  </div>
</div>
   

  <div class="actions">
    <%= f.submit "Sign up", :class=>"btn btn-default btn-lg " %>
  </div>
<% end %>

  <%= link_to "Back", new_user_session_path, :class=>"btn btn-default btn-lg back"%>
              </div>

          </div> <!-- close col-md-6 -->
      </div> <!-- close row -->
</div>
