<h1>All Users</h1>

<% @users.each do |u| %>
	First Name: <%= u.firstname %><br>
	Last Name: <%= u.lastname %><br>
	Picture: <%= image_tag u.image%><br>
	<%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                    "data-sid" => current_user.id, "data-rip" => u.id %><br>
<% end %>
