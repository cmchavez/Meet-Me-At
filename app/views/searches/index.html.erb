<div class="search">

<div class="container">

<div class= "row search-box">

<h1 class='welcome'>Search fun events</h1>

<div class="form-inline">
<%= form_tag searches_path, method: :get do %>
 
	<div class="form-group">
		
		<%= text_field_tag :name, nil, autofocus: true, class: "form-control input-lg", placeholder: "keywords"%>
	</div>

	<div class="form-group">

		<%= text_field_tag :zipcode, nil, autofocus: true, :class=>"form-control input-lg", placeholder: "zipcode"%>
	</div>

	<p><%= submit_tag "Search", class: "btn btn-lg btn-default back"%></p>
<% end %>

</div>



<div class="results col-md-12">

<% if @results %>


<h3>There are <strong><%=@results.length%> events</strong> near this area</h3>
<%@results.each do |r|%>
	<% if r["venue"]%>
		<ul class="result col-md-12">
		<h4 class="btn btn-lg btn-default no-border"><%= r["name"]%></h4><br>
		<p class="btn btn-lg btn-default no-border"><%= r["venue"]["address_1"]%>,<%= r["venue"]["city"]%>,<%= r["venue"]["zip"]%><%= r["venue"]["state"]%></p><br>
		<h4><%= link_to "+ Meetme@", new_search_path(:params => {:name => r["name"], :location => r["venue"]["zip"], :description => r["event_url"], :meeting => r["created"]}), class: "btn btn-default btn-lg " %></h4>


		<% end %>
		</ul>
	

	
	<%end %>



	<% end %>
   </div>


</div>
</div>
</div>